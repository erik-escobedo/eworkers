<%= semantic_form_for(worker, as: :worker, url: registration_path(:worker)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%= f.input :email %>
      <% if worker.new_record? %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <% end %>

    <%= f.fields_for :worker do |w| %>
      <%= w.input :first_name %>
      <%= w.input :last_name %>
      <%= w.input :avatar %>
      <%= w.input :skills, as: :check_boxes %>
    <% end %>
  <% end %>

  <div class="actions">
    <% if worker.new_record? %>
      <%= f.submit "Sign up" %>
    <% else %>
      <%= f.submit "Update" %>
    <% end %>
  </div>
<% end %>
